{% extends 'base.html.twig' %}

{% block body %}
    <div class="panel panel-default col-md-10">
        <!-- Default panel contents -->
        <div class="panel-heading"><strong>Add Contacts</strong></div>
    </div>
        <!-- form -->
    <div class="col-md-10">
        <form action="addNewAction" method="post">

            <div class="form-group row">
                <label for="example-text-input" class="col-xs-2 col-form-label">Name</label>
                <div class="col-xs-10">
                    <input name="name" class="form-control" type="text" placeholder="Artisanal kale" id="example-text-input">
                </div>
            </div>
            <div class="form-group row">
                <label for="example-search-input" class="col-xs-2 col-form-label">Address</label>
                <div class="col-xs-10">
                    <input name="address" class="form-control" type="search" placeholder="Colombo, Sri Lanka" id="example-search-input">
                </div>
            </div>
            <div class="form-group row">
                <label for="example-email-input" class="col-xs-2 col-form-label">Email</label>
                <div class="col-xs-10">
                    <input name="email" class="form-control" type="email" placeholder="email@example.com" id="example-email-input">
                </div>
            </div>
            <div class="form-group row">
                <label for="example-tel-input" class="col-xs-2 col-form-label">Telephone</label>
                <div class="col-xs-10">
                    <input name="contact_no" class="form-control" type="tel" placeholder="+94 771231231" id="example-tel-input">
                </div>
            </div>

            <div class="form-group pull-right">
                <button type="submit" class="btn btn-primary">Add Contacts</button>
            </div>
        </form>
    </div>
{% endblock %}


